@model BritishCab.Models.Booking

<script type="text/javascript">
	$(document).ready(function () {
	    $('#datetimepicker').datetimepicker({
	        theme: 'dark',
	        format: 'd/m/Y H:i'

	    });
	});
</script>
<script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?sensor=false&libraries=places"></script>
<div id="Booking">
	<div class="container">
		<div class="row">
			<div class=" col-md-offset-2 col-sm-offset-1 col-md-3 col-sm-4 col-xs-12 ">

				@using (Html.BeginForm("Index", "Home", FormMethod.Post))
				{
					@Html.AntiForgeryToken()
					@Html.ValidationSummary(true)
					@Html.HiddenFor(model => model.BookingId)

					<script type="text/javascript">
						var options = {
							types: [],
							componentRestrictions: { country: "uk" }
						};

						google.maps.event.addDomListener(window, 'load', function () {
							var places = new google.maps.places.Autocomplete(document.getElementById('pickUpLocation'), options);
							google.maps.event.addListener(places, 'place_changed', function () {
								var place = places.getPlace();
								var address = place.formatted_address;
								var latitude = place.geometry.location.lat();
								var longitude = place.geometry.location.lng();
								//var mesg = "Address: " + address;
								//mesg += "\nLatitude: " + latitude;
								//mesg += "\nLongitude: " + longitude;
								//alert(mesg);
							});
						});
						google.maps.event.addDomListener(window, 'load', function () {
							var places2 = new google.maps.places.Autocomplete(document.getElementById('dropLocation'), options);
						});
					</script>

					if (ViewBag.Error != null)
					{
						<div class="alert alert-warning">@ViewBag.Error</div>
					}
					<table class="table table-striped table-hover text-right ">

						<tr>
							@Html.TextBoxFor(model => model.PickUpLocation, new { @class = "form-control text-right", id = "pickUpLocation", placeholder = "From", required = "required", autocomplete = "off" })
						</tr>
						<tr>
							@Html.TextBoxFor(model => model.DropLocation, new { @class = "form-control text-right", id = "dropLocation", placeholder = "To", required = "required", autocomplete = "off" })
						</tr>
						<tr>
							@Html.TextBoxFor(model => model.PickUpDateTime, "{0: dd/MM/yyy H:mm}", new { @class = "form-control text-right", id = "datetimepicker", placeholder = "Pick up time", required = "required", autocomplete = "off" })
						</tr>

					</table>
					<div class="tp-caption sfb fadeout small_white">
						<button type="submit" class="btn btn-animated btn-lg btn-gray-transparent get-quote">Get a quote</button>
					</div>
				}
			</div>

		</div>
	</div>
</div>
