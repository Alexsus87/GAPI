     data-easing="easeOutQuad"
     data-endspeed="600">
    @*<span class="icon default-bg circle small hidden-xs"><i class="fa fa-laptop"></i></span> 100% Responsive*@
    <div>
        <div id="Booking">
            <div class="container">
                @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.BookingEntityId)

                    <script type="text/javascript">
                        var options = {
                            types: ['(cities)'],
                            componentRestrictions: { country: "uk" }
                        };

                        google.maps.event.addDomListener(window, 'load', function () {
                            var places = new google.maps.places.Autocomplete(document.getElementById('pickUpLocation'), options);
                            google.maps.event.addListener(places, 'place_changed', function () {
                                var place = places.getPlace();
                                var address = place.formatted_address;
                                var latitude = place.geometry.location.lat();
                                var longitude = place.geometry.location.lng();
                                //var mesg = "Address: " + address;
                                //mesg += "\nLatitude: " + latitude;
                                //mesg += "\nLongitude: " + longitude;
                                //alert(mesg);
                            });
                        });
                        google.maps.event.addDomListener(window, 'load', function () {
                            var places2 = new google.maps.places.Autocomplete(document.getElementById('dropLocation'), options);
                        });
                    </script>

                    if (ViewBag.Error != null)
                    {
                        <div class="alert alert-warning">@ViewBag.Error</div>
                    }
                    <table class="table table-striped table-hover">

                        <tr>
                            @Html.TextBoxFor(model => model.PickUpLocation, new { @class = "form-control", id = "pickUpLocation", required = "required" })
                        </tr>
                        @*<tr>
                                @Html.TextBoxFor(model => model.PickUpDateTime, new { @class = "form-control datepicker", placeholder = "Choose pick up date" })
                            </tr>*@
                        <tr>
                            @Html.TextBoxFor(model => model.PickUpDateTime, new { @class = "form-control", id = "datetimepicker", placeholder = "Choose pich up time", required = "required" })
                        </tr>
                        <tr>
                            @Html.TextBoxFor(model => model.DropLocation, new { @class = "form-control", id = "dropLocation", required = "required" })
                        </tr>
                    </table>
                    <div class="tp-caption sfb fadeout small_white">
                        <button type="submit" class="btn btn-animated btn-lg btn-gray-transparent get-quote">Get a quote</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>



